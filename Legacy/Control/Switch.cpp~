#include "Control.h"

Switch::Switch(int p)
{
	pin = p;
	pinMode(pin, OUTPUT);
	digitalWrite(pin, LOW);
	onWaiting = false;
	offWaiting = false;
	iAmOn = false;
	analogue = false;
	value = 0;
}

bool Switch::Spin(time_t time)
{
	if(onWaiting || iAmOn)
	{
		if(time >= onTime)
		{
			onWaiting = false;
			iAmOn = true;
			if(analogue)
				analogWrite(pin, value);
			else
				digitalWrite(pin, HIGH);
		}
	}

	if(offWaiting || (!iAmOn))
	{
		if(time >= offTime)
		{
			offWaiting = false;
			iAmOn = false;
			digitalWrite(pin, LOW);
		}
	}
}




